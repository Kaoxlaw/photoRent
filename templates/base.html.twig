<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}PhotoRent{% endblock %}</title>
        {% block stylesheets %}
        {% endblock %}
        <link rel="stylesheet" type="text/css" href="{{asset('./css/bootstrap.min.css')}}" >

    </head>
    <body>
            {% block header %}
                <nav class="navbar navbar-expand-lg navbar-light bg-info">
                    <a class="navbar-brand" href="{{ path('home') }}">PhotoRent</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="{{ path('home') }}">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('equipments_index')}}">Equipments</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Pricing</a>
                            </li>
                            
                        </ul>
                        {% if(is_granted('IS_AUTHENTICATED_FULLY')) %}
                        Hello {{ app.user }} - <button class="btn btn-outline-dark my-2 my-sm-0" type="submit"><a href="{{ path('app_logout')}}">LogOut</a></button>
                        {% else %}
                            <button class="btn btn-outline-dark my-2 my-sm-0" type="submit"><a href="{{ path('app_login')}}">LogIn</a></button>
                            <button class="btn btn-outline-dark my-2 my-sm-0" type="submit"><a href="{{ path('app_register')}}">Create</a></button>
                        {% endif %}
                    </div>
                </nav>
            {% endblock %}

            {% block message %}
                {% for message in app.flashes('danger') %}
                    <div class="alert alert-danger" role="alert">
                    <img src=" https://i.gifer.com/5O4.gif">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success" role="alert">
                    <img src="https://i.gifer.com/1ehD.gif">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endblock %}
        {% block body %}
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
